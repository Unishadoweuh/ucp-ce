# ─── Proxmox VE ─────────────────────────────────────────────
# IP or hostname of your Proxmox server
PROXMOX_HOST=192.168.1.100
# API Token — format: user@realm!tokenid
PROXMOX_TOKEN_NAME=root@pam!ucp
# API Token secret value
PROXMOX_TOKEN_VALUE=your-proxmox-token-value-here
# Set to true if you have a valid SSL certificate
PROXMOX_VERIFY_SSL=false

# ─── PostgreSQL ─────────────────────────────────────────────
POSTGRES_USER=ucp
POSTGRES_PASSWORD=change-me-to-a-strong-password
POSTGRES_DB=ucp_vm

# ─── Google OAuth2 ──────────────────────────────────────────
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ─── JWT ────────────────────────────────────────────────────
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=generate-a-random-secret-here

# ─── Encryption (optional) ──────────────────────────────────
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, secrets are stored as plaintext
ENCRYPTION_KEY=
